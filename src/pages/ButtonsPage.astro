---
import Layout from '../layouts/Layout.astro';
import Display from '../components/Display.astro';
import ButtonsDefault from '../components/Buttons/ButtonsDefault.astro';
import ButtonGradient from '../components/Buttons/ButtonsGradients.astro';
import ButtonBorder from '../components/Buttons/ButtonsBorder.astro';

const buttonDefaultString = `<button type="button" class="text-white bg-black hover:bg-gray-900 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Button</button>
<button type="button" class="text-black bg-white hover:bg-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 border-gray-500 border-2">Button</button>`;

const buttonGradienttString = `<button type="button" class="text-white bg-gradient-to-r from-gray-900 via-gray-700 to-black hover:bg-gradient-to-br font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Button</button>
<button type="button" class="text-black bg-gradient-to-r from-gray-400 via-white to-gray-300 hover:bg-gradient-to-br font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Button</button>
`;

const buttonBordertString = `<button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium  rounded-lg group bg-gradient-to-br text-white from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500">
    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-gray-900 rounded-md group-hover:bg-opacity-0 hover:text-black">
        Button
    </span>
</button>

<button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500">
    <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white text-black rounded-md group-hover:bg-opacity-0 hover:text-white">
     Button
    </span>
</button>`;


---

<Layout title="Welcome to Astro.">
    <Display textToCopy={buttonDefaultString}>
         <ButtonsDefault></ButtonsDefault>
    </Display>

    <Display textToCopy={buttonGradienttString}>
      <ButtonGradient></ButtonGradient>

     </Display >
     <Display textToCopy={buttonBordertString}>
         <ButtonBorder></ButtonBorder>

     </Display>
    
</Layout>