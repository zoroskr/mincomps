---
import Layout from '../layouts/Layout.astro';
import FormsDefault from '../components/Forms/FormsDefault.astro';
import Display from '../components/Display.astro';

const formDefaultString = `<form class="max-w-sm mx-auto">
    <div class="mb-5">
      <label for="email" class="block mb-2 text-sm font-medium text-black">Your email</label>
      <input type="email" id="email" class="text-sm rounded-lg block w-full p-2.5 bg-black text-white" placeholder="name@mindcomps.com" required />
    </div>
    <div class="mb-5">
      <label for="password" class="block mb-2 text-sm font-medium  text-black">Your password</label>
      <input type="password" id="password" class="  text-sm rounded-lg block w-full p-2.5 bg-black text-white" required />
    </div>
    <div class="flex items-start mb-5">
      <div class="flex items-center h-5">
        <input id="remember" type="checkbox" value="" class="w-4 h-4 rounded bg-black" required />
      </div>
      <label for="remember" class="ms-2 text-sm font-medium text-black">Remember me</label>
    </div>
    <button type="submit" class="text-black border border-gray-400  font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center bg-white hover:bg-gray-300">Submit</button>
  </form>
  
`;
---

<Layout title="Welcome to Astro.">

            <Display textToCopy={formDefaultString}>
                <FormsDefault></FormsDefault>
            </Display>

            
</Layout>