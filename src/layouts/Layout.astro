---
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />


	</head>
	<body class="flex flex-col h-screen bg-white">
		<Navbar />
		<section class="flex-1 flex flex-col lg:flex-row justify-between items-center max-w-screen-xl w-full mx-auto">
			<slot />
		</section>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
    	color-scheme: dark;
	}
	html {
		font-family: system-ui, sans-serif;
	}

	body{
		color: rgba(17, 17, 17, 0.9);
		display: flex;
        flex-direction: column;
		min-height: 100vh;
	}

</style>
