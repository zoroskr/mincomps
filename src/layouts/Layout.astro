---
import { Image } from 'astro:assets';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import ImageIcon from '../images/logo.svg'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Mincomps - Design System</title>
		<meta name="title" content="Mincomps - Design System" />
		<meta name="description" content="Mincomps is a design system, this website is in charge of collecting different components and modifying them to give them a minimalist approach." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://zoroskr.github.io/mincomps/" />
		<meta property="og:title" content="Mincomps - Design System" />
		<meta property="og:description" content="Mincomps is a design system, this website is in charge of collecting different components and modifying them to give them a minimalist approach." />
		<meta property="og:image" content={ImageIcon.src}  />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://zoroskr.github.io/mincomps/" />
		<meta property="twitter:title" content="Mincomps - Design System" />
		<meta property="twitter:description" content="Mincomps is a design system, this website is in charge of collecting different components and modifying them to give them a minimalist approach." />
		<meta property="twitter:image" content={ImageIcon.src}  />
		<link rel="icon" href={ImageIcon.src} />

	</head>
	<body class="flex flex-col h-screen bg-white">
		<Navbar />
		<section class="flex-1 flex flex-col lg:flex-row justify-between items-center max-w-screen-xl w-full mx-auto">
			<slot />
		</section>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
    	color-scheme: dark;
	}
	html {
		font-family: system-ui, sans-serif;
	}

	body{
		color: rgba(17, 17, 17, 0.9);
		display: flex;
        flex-direction: column;
		min-height: 100vh;
	}

</style>
